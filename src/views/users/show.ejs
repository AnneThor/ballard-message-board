<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
      <% include ../static/partials/messages.ejs %>
      <h1 class="light-font row justify-content-center"><%= `${user.email}'s profile` %></h1>
      <hr>
      <h2 class="light-font">Latest Posts:</h2>
      <ul class="list-unstyled">
        <% if(posts) { %>
          <% posts.forEach( post => { %>
            <li class="translucent dark-font">
              <a href="/topics/<%= post.topicId %>/posts/<%= post.id %>">
                <%= post.title %>
              </a>
            </li>
          <% }) %>
        <% } %>
      </ul>
      <hr>
      <h2 class="light-font">Latest Comments:</h2>
      <ul class="list-unstyled">
        <% if(comments) { %>
          <% comments.forEach( comment => { %>
            <li class="translucent dark-font">
              <span>Post: </span>
              <a href="/topics/<%= comment.Post.topicId %>/posts/<%= comment.Post.id %>">
                <%= comment.Post.title %>
              </a>
              <p>Comment: <%= comment.body %></p>
            </li>
            <hr>
          <% }) %>
        <% } %>
      </ul>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>

</html>
